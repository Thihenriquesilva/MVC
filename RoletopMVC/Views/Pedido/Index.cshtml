@model RoletopMVC.ViewModels.PedidoViewModel
    <main>
        <section class="formulario">

            <h2 style="text-align: center; font-size: 18px;" > Por favor, @Model.NomeUsuario! escolha sua opções</h2>
            <form method="POST" action='@Url.Action("Registrar","Pedido")'>
                <div>
                    <label for="nome">Nome</label>
                    <input id="nome"type="text" maxlength="20" minlength="3" value="@Model.Cliente.Nome" name="nome"/>
                </div>
                <div>
                    <label for="telefone">Telefone para contato</label>
                    <input id="telefone" type="text" placeholder="11 12345 6789" value="@Model.Cliente.Telefone" name="telefone"/>
                </div>
                <div>
                    <label for="cpf">CPF</label>
                    <input id="cpf" type="text" value="@Model.Cliente.CPF" name="cpf"/>
                </div>
                <div>
                    <label for="email">E-mail</label>
                    <input id="email" type="text" placeholder="example@email.com" value="@Model.Cliente.Email" name="email"/>
                </div>
                <div>
                    <label for="eventos">Tipo de evento</label>
                    <select id="eventos" name="eventos" required>
                        <option value="" disabled select>Selecione</option>
                        @foreach( var eventos in @Model.Eventos){
                            <option value=@eventos.Nome>@eventos.Nome

                            </option>
                        }
                    </select>
                </div>
                <div>
                    <label for="tipo-de-evento">Serviços desejados</label>
                    <select id="servicos" name="servicos" required>
                        <option value="" disabled select>Selecione</option>
                        @foreach( var servicos in @Model.Servicos){
                            <option value=@servicos.Nome>@servicos.Nome
                                
                            </option>
                        }
                    </select>
                </div>
                <div>
                    <label for="pessoas">Nº de pessoas</label>
                    <input id="pessoas" type="text" value="@Model.Pedido.NumeroParticipantes" name="pessoas" />
                </div>
                <div>
                    <label for="data">Data do evento</label>
                    <input id="agenda-evento" type="date"  name="agenda-evento" value="@Model.Pedido.AgendamentoEvento"/>
                </div>
                <div>
                    <label for="forma-evento">Forma do evento</label>
                    <input id="forma-evento" type="text" placeholder="Publico ou Privado" value="@Model.Pedido.FormadoEvento" name="forma-evento">
                </div>
                <div>
                    <label for="forma-pagamento">Forma do pagamento</label>
                    <input id="forma-pagamento" type="text" placeholder="Credito ou Debito" value="@Model.Pedido.FormaPagamento" name="forma-pagamento">
                </div>
                <div class="enter">
                <input type="submit" value="Aceitar" />
                <input type="submit" value="Cancelar" />
                </div>
            </form>

        </section>
    </main>