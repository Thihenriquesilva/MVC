@model RoletopMVC.ViewModels.DashboardViewModel
    <main>
        <h2 style="text-align: center; font-size: 18px;">Dashboard</h2>
        <section id="status-pedidos">
            <h3>Status dos pedidos</h3>
            <div id="painel">
                <div class="box-status-pedidos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.PedidosAprovados</p>
                </div>
                <div class="box-status-pedidos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.PedidosPendente</p>
                </div>
                <div class="box-status-pedidos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.PedidosReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-pedidos">
            <h3>Lista de pedidos</h3>
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome</th>
                        <th rowspan="2">Email</th>
                        <th rowspan="2">Eventos</th>
                        <th rowspan="2">Serviços </th>
                        <th rowspan="2">Nº participantes</th>
                        <th rowspan="2">Forma do evento</th>
                        <th rowspan="2">Data do evento</th>
                        <th rowspan="2">Pagamento</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                    <!-- <tr>
                        
                        <th></th>
                        <th></th>
                    </tr> -->
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Pedidos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var pedido in Model.Pedidos )
                    {
                        <tr>
                            <td>@pedido.Cliente.Nome</td>
                            <td>@pedido.Cliente.Email</td>
                            <td>@pedido.Evento.Nome</td>
                            <td>@pedido.Servicos.Nome</td>
                            <td>@pedido.NumeroParticipantes</td>
                            <td>@pedido.AgendamentoEvento</td>
                            <td>@pedido.FormadoEvento</td>
                            <td>@pedido.FormaPagamento</td>
                            
                            <td><a href='@Url.Action("Aprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>